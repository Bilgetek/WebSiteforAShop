@model IEnumerable<WebWindowsProject.Models.Order>

@{
    ViewData["Title"] = "WishList";
}

<h2>WishList</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @using (Html.BeginForm("Delete", "Home", new { id = item.ProductId }))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <img src="@item.Image" width="100" height="100" asp-append-version="true" />
                    </td>
                    <td>
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete record with ID = @item.ProductId');" />

                    </td>
                </tr>
            }
        }
    </tbody>
</table>
